@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Razor</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Razor.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Sofia">
</head>
<body>
    
    <header>
         @if(Context.Session.GetString(SessionKeys.UserNameKey) != null)
                {
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color: whitesmoke;" >
            <div class="container">
                <a class="navbar-brand text-dark" asp-area="" asp-page=""> <i class="fa fa-coffee" aria-hidden="true"></i> Start Your Day Coffee Shop</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                @if(Context.Session.GetString(SessionKeys.UserNameKey) != null)
                {
                         @if(Context.Session.GetString(SessionKeys.UserNameKey) == "Admin")
                {
                        <li class="nav-item1">
                            <a class="nav-link text-dark" asp-page-handler="back"  asp-area="" asp-page="/Manager">Home</a>
                        </li>
                }
                
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page-handler="logout" asp-area="" asp-page="/Index">SignOut</a>
                        </li>

                }
                    </ul>
                </div>
            </div>
        </nav>
                }
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

        

    @* <footer class="border-top footer text-muted" style="background-color: rgba(0, 0, 0, 0.6);">
        <div class="container">
            &copy; 2023 - Razor - CoffeeShop 
        </div>
    </footer> *@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>